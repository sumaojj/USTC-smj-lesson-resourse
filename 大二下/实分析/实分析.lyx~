\color inherit

\begin_inset Formula 
\[
0<m^{*}\left(E_{2}\right)\leq m^{*}\left(E_{2}∩F\right)+m^{*}\left(E_{2}∩F^{c}\right)
\]

\end_inset


\end_layout

\begin_layout Proof
从而
\begin_inset Formula $m^{*}\left(E_{2}∩F\right)>0$
\end_inset

,即
\begin_inset Formula $E_{2}∩F\neq\emptyset$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\]

\end_inset


\end_layout

\begin_layout Standard
那么Fubini定理的逆定理的形式到底该是什么呢？下面的定理回答了这个问题
\end_layout

\begin_layout Theorem
\begin_inset Formula $\text{如果}E_{1}\in\mathcal{L}_{\mathbb{R}^{n_{1}}}\text{，且}E_{2}\in\mathcal{L}_{\mathbb{R}^{n_{2}}}\text{，那么}E_{1}\times E_{2}\in\mathcal{L}_{\mathbb{R}^{n_{1}+n_{2}}}$
\end_inset

且
\begin_inset Formula $m_{n_{1}+n_{2}}\left(E_{1}\times E_{2}\right)=m_{n_{1}}\left(E_{1}\right)\cdot m_{n_{2}}\left(E_{2}\right)$
\end_inset


\end_layout

\begin_layout Proof
我们需要先证明一个引理
\end_layout

\begin_deeper
\begin_layout Lemma
任意的
\begin_inset Formula $E_{1}\in\mathbb{R}^{n_{1}}$
\end_inset

,
\begin_inset Formula $E_{2}\in\mathbb{R}^{n_{2}}$
\end_inset

,有
\begin_inset Formula $m_{n_{1}+n_{2}}^{*}\left(E_{1}\times E_{2}\right)\leq m_{n_{1}}^{*}\left(E_{1}\right)\cdot m_{n_{2}}^{*}\left(E_{2}\right)$
\end_inset


\end_layout

\begin_layout Proof
不妨设
\begin_inset Formula $m_{n_{1}}^{*}\left(E_{1}\right)\text{，}m_{n_{2}}^{*}\left(E_{2}\right)<\infty$
\end_inset

,则对任意的
\begin_inset Formula $\varepsilon>0$
\end_inset

,存在
\begin_inset Formula $E_{1},E_{2}$
\end_inset

的方体覆盖
\begin_inset Formula $\left\{ Q_{k}^{1}\right\} _{k=1}^{\infty}$
\end_inset

，
\begin_inset Formula $\left\{ Q_{j}^{2}\right\} _{j=1}^{\infty}$
\end_inset

使得
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\stackrel[k=1]{\infty}{\sum}\left|Q_{k}^{1}\right|<m_{n_{1}}^{*}\left(E_{1}\right)+\varepsilon
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\stackrel[j=1]{\infty}{\sum}\left|Q_{j}^{2}\right|<m_{n_{2}}^{*}\left(E_{2}\right)+\varepsilon
\]

\end_inset


\end_layout

\begin_layout Proof
则
\begin_inset Formula $\left\{ Q_{k}^{1}\times Q_{j}^{2}\right\} _{j,k}$
\end_inset

为
\begin_inset Formula $E_{1}\times E_{2}$
\end_inset

的一个矩体覆盖，于是
\begin_inset Formula 
\[
m_{n_{1}+n_{2}}^{*}\left(E_{1}\times E_{2}\right)\leq\stackrel[j,k=1]{\infty}{\sum}\left|Q_{k}^{1}\times Q_{j}^{2}\right|=\left(\stackrel[k=1]{\infty}{\sum}\left|Q_{k}^{1}\right|\right)\left(\stackrel[j=1]{\infty}{\sum}\left|Q_{j}^{2}\right|\right)\leq\left(m_{n_{1}}^{*}\left(E_{1}\right)+\varepsilon\right)\left(m_{n_{2}}^{*}\left(E_{2}\right)+\varepsilon\right)
\]

\end_inset


\end_layout

\begin_layout Proof
令
\begin_inset Formula $\varepsilon\rightarrow0^{+}$
\end_inset

，即得证
\end_layout

\begin_layout Standard
现在我们给出定理24的证明
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
先证
\begin_inset Formula $E_{1}\times E_{2}\in\mathcal{L}_{\mathbb{R}^{n_{1}+n_{2}}}$
\end_inset

。由
\begin_inset Formula $E_{1}\subset\mathbb{R}^{n_{1}},E_{2}\subset\mathbb{R}^{n_{2}}$
\end_inset

知
\begin_inset Formula $E_{1}=G_{1}/Z_{1}$
\end_inset

,
\begin_inset Formula $E_{2}=G_{2}/Z_{2}$
\end_inset

,其中
\begin_inset Formula $G_{i}\in G_{\delta}$
\end_inset

，
\begin_inset Formula $Z_{i}$
\end_inset

为零测集，则
\begin_inset Formula $G_{1}\times G_{2}$
\end_inset

为
\begin_inset Formula $\mathbb{R}^{n_{1}+n_{2}}$
\end_inset

的
\begin_inset Formula $G_{\delta}$
\end_inset

集，而
\begin_inset Formula 
\[
\left(G_{1}\times G_{2}\right)/\left(E_{1}\times E_{2}\right)\subset\left[\left(G_{1}/E_{1}\right)\times G_{2}\right]∪\left[\left(G_{2}/E_{2}\right)\times G_{1}\right]
\]

\end_inset


\end_layout

\begin_layout Proof
根据引理2，
\begin_inset Formula $m^{*}\left(\left(G_{1}\times G_{2}\right)/\left(E_{1}\times E_{2}\right)\right)=0$
\end_inset

，于是
\begin_inset Formula $E_{1}\times E_{2}\in\mathcal{L}_{\mathbb{R}^{n_{1}+n_{2}}}$
\end_inset

。再由Fubini定理
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\int_{\mathbb{R}^{n_{1}+n_{2}}}X_{E_{1}\times E_{2}}dm=m_{n_{1}+n_{2}}\left(E_{1}\times E_{2}\right)=\int_{\mathbb{R}^{n_{2}}}\left[\int_{\mathbb{R}^{n_{1}}}X_{E_{1}\times E_{2}}dx\right]dy=m_{n_{1}}\left(E_{1}\right)\cdot m_{n_{2}}\left(E_{2}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
下面考虑的是积分的几何意义,先介绍一个引理
\end_layout

\begin_layout Lemma
设
\begin_inset Formula $f$
\end_inset

是
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

上的可测函数，令
\begin_inset Formula $\widetilde{f}\left(x,y\right)\overset{def}{=}f\left(x\right)$
\end_inset

,
\begin_inset Formula $\left(x,y\right)\in\mathbb{R}^{n_{1}+n_{2}}$
\end_inset

,则
\begin_inset Formula $\widetilde{f}\left(x,y\right)$
\end_inset

是
\begin_inset Formula $\mathbb{R}^{n_{1}+n_{2}}$
\end_inset

上的可测函数
\end_layout

\begin_layout Proof
对任意的
\begin_inset Formula $a\in R$
\end_inset

，
\begin_inset Formula $E\left(a\right)\overset{def}{=}\left\{ x\in\mathbb{R}^{n_{1}}:f\left(x\right)<a\right\} \in\mathcal{L}_{\mathbb{R}^{n_{1}}}$
\end_inset

,于是
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
f\in L^{+}\left(\mathbb{R}^{n}\right)\left\{ \left(x,y\right)\in\mathbb{R}^{n_{1}+n_{2}}:\widetilde{f}\left(x,y\right)<a\right\} =E\left(a\right)\times\mathbb{R}^{n_{2}}\overset{\text{定\text{理24}}}{\in}\mathcal{L}_{\mathbb{R}^{n_{1}+n_{2}}}
\]

\end_inset


\end_layout

\begin_layout Theorem
设
\begin_inset Formula $f$
\end_inset

是
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

上的非负函数，令
\begin_inset Formula 
\[
A\overset{def}{=}\left\{ \left(x,y\right)\in\mathbb{R}^{n+1}:0\leq y\leq f\left(x\right)\right\} 
\]

\end_inset


\end_layout

\begin_layout Theorem
则
\end_layout

\begin_layout Theorem
1.
\begin_inset Formula $f\in L^{+}\left(\mathbb{R}^{n}\right)\Leftrightarrow A\in\mathcal{L}_{\mathbb{R}^{n+1}}$
\end_inset


\end_layout

\begin_layout Theorem
2.
\begin_inset Formula $f\in L^{+}\left(\mathbb{R}^{n}\right)\Rightarrow\int_{\mathbb{R}^{n_{1}}}f\left(x\right)dx=m_{n+1}\left(A\right)$
\end_inset


\end_layout

\begin_layout Proof
1.
\begin_inset Formula $\Rightarrow:$
\end_inset


\begin_inset Formula $f\in L^{+}\left(\mathbb{R}^{n}\right)\overset{\text{引\text{理3}}}{\Rightarrow}F\left(x,y\right)\overset{def}{=}y-f\left(x\right)$
\end_inset

在
\begin_inset Formula $\mathbb{R}^{n+1}$
\end_inset

上可测
\begin_inset Formula $\Rightarrow A=\left\{ y\geq0\right\} ∩\left\{ F\leq0\right\} $
\end_inset

可测
\end_layout

\begin_layout Proof
\begin_inset Formula $\Leftarrow:$
\end_inset

对任意
\begin_inset Formula $x\in\mathbb{R}^{n}$
\end_inset

，
\begin_inset Formula $A_{x}=\left[0,f\left(x\right)\right]\in\mathcal{L}_{\mathbb{R}^{n}}$
\end_inset

,且
\begin_inset Formula $x\longrightarrow m\left(A_{x}\right)\in L^{+}\left(\mathbb{R}\right)$
\end_inset

，而
\begin_inset Formula $f\left(x\right)=m_{1}\left(A_{x}\right)$
\end_inset

,即
\begin_inset Formula $f\in L^{+}\left(\mathbb{R}^{n}\right)$
\end_inset


\end_layout

\begin_layout Proof
2.由推论1，
\begin_inset Formula $m_{n+1}\left(A\right)=\int_{\mathbb{R}^{n}}f\left(x\right)dx$
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset Formula $f$
\end_inset

是
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

上的可测函数
\begin_inset Formula $\Rightarrow$
\end_inset

f
\begin_inset Formula $\left(x-y\right)$
\end_inset

在
\begin_inset Formula $\mathbb{R}^{2n}$
\end_inset

可测
\end_layout

\begin_layout Section
Lec 18
\end_layout

\begin_layout Standard
回忆Riemann积分下的Newton-Leibniz formula,现在探究在Lebesgue积分框架下的微积分基本定理。下面是我们感兴趣的问题。
\end_layout

\begin_layout Theorem
\begin_inset Formula $f\in C\left[a,b\right]$
\end_inset

,令
\begin_inset Formula $F\left(x\right)\overset{def}{=}$
\end_inset


\begin_inset Formula $\int_{a}^{x}f\left(t\right)dt$
\end_inset

,
\begin_inset Formula $x\in\left[a,b\right]$
\end_inset

,则
\begin_inset Formula $F\left(x\right)$
\end_inset

在
\begin_inset Formula $\left[a,b\right]$
\end_inset

上可微，且
\begin_inset Formula $F^{\prime}\left(x\right)=f\left(x\right)$
\end_inset


\end_layout

\begin_layout Question
把
\begin_inset Formula $f\in C\left[a,b\right]$
\end_inset

换成
\begin_inset Formula $f\in L^{1}\left(\left[a,b\right]\right)$
\end_inset

，原命题是否成立？
\end_layout

\begin_layout Standard
实际上在a.e下是对的（LDT）
\end_layout

\begin_layout Theorem
F可微且
\begin_inset Formula $F^{\prime}\in R\left[a,b\right]$
\end_inset

,则
\begin_inset Formula $\int_{a}^{x}F^{\prime}\left(t\right)dt=F\left(x\right)-F\left(a\right)$
\end_inset


\end_layout

\begin_layout Question
条件改为
\begin_inset Formula $\begin{cases}
\begin{array}{c}
F\\
F^{\prime}
\end{array} & \begin{array}{c}
a.e\text{可\text{微}}\\
\in L^{1}\left[a,b\right]
\end{array}\end{cases}$
\end_inset

,原命题是否成立？
\end_layout

\begin_layout Example
原命题不成立，比如
\begin_inset Formula 
\[
F\left(x\right)=\begin{cases}
\begin{array}{c}
A\\
0\\
B
\end{array} & \begin{array}{c}
x=a\\
a<x<b\\
x=b
\end{array}\end{cases}
\]

\end_inset


\end_layout

\begin_layout Question
F连续且a.e可微，且
\begin_inset Formula $F^{\prime}\in R\left[a,b\right]$
\end_inset

，原命题是否成立？、
\end_layout

\begin_layout Example
原命题不成立，反例是Contor-Lebesgue函数
\end_layout

\begin_layout Standard
注意到
\begin_inset Formula $F^{\prime}=f\Longleftrightarrow$
\end_inset


\begin_inset Formula 
\[
\underset{h\rightarrow0}{lim}\frac{1}{h}\int_{x}^{x+h}f\left(y\right)dy=f\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Question
\begin_inset Formula $f\in L^{1}\left(\mathbb{R}^{n}\right)$
\end_inset

,是否有
\begin_inset Formula 
\[
\underset{m\left(B\right)\rightarrow0}{lim}\frac{1}{m\left(B\right)}\int_{B}fdm=f\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Question
对于a.e的
\begin_inset Formula $x\in\mathbb{R}^{n}$
\end_inset

？
\end_layout

\begin_layout Definition
定义
\begin_inset Formula 
\[
L_{loc}^{1}\overset{def}{=}\left\{ f:f\in L^{1}\left(K\right),\forall K\overset{\text{紧}}{\subset}\mathbb{R}^{n}\right\} =\left\{ \text{局\text{部\text{可\text{积函数}}}}\right\} 
\]

\end_inset


\end_layout

\begin_layout Definition
显然有
\begin_inset Formula $L_{loc}^{1}\supset L^{1}$
\end_inset


\end_layout

\begin_layout Theorem
（Lebesgue积分定理）设
\begin_inset Formula $f\in L_{loc}^{1}$
\end_inset

,则对a.e的
\begin_inset Formula $x\in\mathbb{R}^{n}$
\end_inset

有
\begin_inset Formula 
\[
\underset{m\left(B\right)\rightarrow0}{lim}\frac{1}{m\left(B\right)}\int_{B}fdm=f\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Theorem
其中
\begin_inset Formula $x\in B$
\end_inset

，B为球体
\end_layout

\begin_layout Standard
为了证明LDT,需要一系列的准备
\end_layout

\begin_layout Definition
对
\begin_inset Formula $f\in L_{loc}^{1}$
\end_inset

，定义
\end_layout

\begin_layout Definition
\begin_inset Formula 
\[
f^{*}\left(x\right)\overset{def}{=}\underset{x\in B}{sup}\frac{1}{m\left(B\right)}\int_{B}\left|f\right|dm
\]

\end_inset


\end_layout

\begin_layout Definition
为
\begin_inset Formula $f$
\end_inset

的非中心Hardy-Littlewood极大函数，定义
\end_layout

\begin_layout Definition
\begin_inset Formula 
\[
Mf\left(x\right)\overset{def}{=}\underset{r>0}{sup}\frac{1}{m\left(B_{r}\left(x\right)\right)}\int_{B_{r}\left(x\right)}\left|f\right|dm
\]

\end_inset


\end_layout

\begin_layout Definition
为
\begin_inset Formula $f$
\end_inset

的中心H-L极大函数
\end_layout

\begin_layout Theorem
\begin_inset Formula $f\in L_{loc}^{1}\Rightarrow$
\end_inset


\begin_inset Formula $Mf\text{下\text{半连续}}$
\end_inset

 i.e 
\end_layout

\begin_layout Theorem
\begin_inset Formula 
\[
\forall a\in\mathbb{R}\text{，}\left\{ Mf>a\right\} \text{是开集}
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $x\in\left\{ Mf>a\right\} \Leftrightarrow a<Mf\left(x\right)$
\end_inset

,于是存在
\begin_inset Formula $r>0$
\end_inset

,使得
\begin_inset Formula 
\[
a<\frac{1}{m\left(B_{r}\left(x\right)\right)}\int_{B_{r}\left(x\right)}\left|f\right|dm
\]

\end_inset


\end_layout

\begin_layout Proof
于是存在
\begin_inset Formula $p>r$
\end_inset

,使得
\begin_inset Formula 
\[
a<\frac{1}{m\left(B_{p}\left(x\right)\right)}\int_{B_{r}\left(x\right)}\left|f\right|dm
\]

\end_inset


\end_layout

\begin_layout Proof
于是任意的
\begin_inset Formula $y\in B_{p-r}\left(x\right)$
\end_inset

，
\begin_inset Formula $B_{r}\left(x\right)\subset B_{p}\left(y\right)$
\end_inset

,于是
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
a<\frac{1}{m\left(B_{p}\left(x\right)\right)}\int_{B_{r}\left(x\right)}\left|f\right|dm\leq\frac{1}{m\left(B_{p}\left(y\right)\right)}\int_{B_{p}\left(y\right)}\left|f\right|dm
\]

\end_inset


\end_layout

\begin_layout Proof
从而
\begin_inset Formula 
\[
B_{p-r}\left(x\right)\subset\left\{ Mf>a\right\} 
\]

\end_inset


\end_layout

\begin_layout Proof
即
\begin_inset Formula $\left\{ Mf>a\right\} \text{是开集}$
\end_inset


\end_layout

\begin_layout Corollary
\begin_inset Formula $f\in L_{loc}^{1}\Rightarrow Mf\text{可\text{测}}$
\end_inset


\end_layout

\begin_layout Theorem
（H-L极大定理）
\end_layout

\end_body
